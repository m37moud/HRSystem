CREATE TABLE user (
    id       INTEGER PRIMARY KEY AUTOINCREMENT
                     UNIQUE
                     NOT NULL,
    user_name     TEXT NOT NULL,
    pass     TEXT NOT NULL,
    playrole TEXT DEFAULT "user"
);

getSingleUser:
SELECT *
FROM user
WHERE id = :id;

getUser:
SELECT *
FROM user
WHERE user_name = :userName;


getAllUser:
SELECT * FROM user WHERE 1;



